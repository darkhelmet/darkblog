#toppanel
  #panel
    .container_12
      #toppanel-extras.grid_12
        .grid_4.left.alpha
          %h2 What I'm Keeping
          - if @bookmarks
            %ul
              - @bookmarks.each do |b|
                %li= delicious(b)
              %li= delicious_link
        .grid_4.left
          %h2 What I'm Reading
          - if @shared_items
            %ul
              - @shared_items.each do |s|
                %li= reader(s)
        .grid_4.left.omega
          %h2 What I'm Hacking
          - if @repos
            %ul
              - @repos.each do |r|
                %li= repo(r)
              %li= github_link
  .tab
    %ul.login
      %li.left
      %li#toggle
        %a#open.open{ :href => '#' } More
        %a#close.close{ :style => 'display: none;', :href => '#' } Less
      %li.right &nbsp;