.sidebar-item.right
  %h3
    %a{ :href => '/feed' }
      = partial("%img{ :src => '/images/rss.png', :style => 'vertical-align: middle;' }")
    %a{ :href => '/feed' } Subscribe
.sidebar-item.right
  %ul
    %li 
      %h2 The author
    %li
      = image_tag(gravatar_url(Blog.email))
    %li= "#{Blog.author} #{Blog.bio}"
.sidebar-item.right
  %ul
    %li
      %h2 Tags
    %li
      - tag_cloud(@tags, %w(tag1 tag2 tag3 tag4 tag5)) do |tag,css|
        = partial("%a.#{css}{ :href => '/tag/#{tag}' } #{tag}") if 'tag1' != css
.sidebar-item.right
  %ul
    %li
      %h2 Archives
    - monthly_archive_links.reverse_each do |l|
      %li= l