%title= title
%link{ :rel => 'index', :title => Blog.title, :href => Blog.index }
%meta{ 'http-equiv' => 'Content-Type', :content => 'text/html; charset=UTF-8' }
%meta{ :name => 'description', :content => Blog.tagline }
- if keywords
  %meta{ :name => 'keywords', :content => keywords }

%link{ :rel => 'alternate', :type => 'application/rss+xml', :title => "#{Blog.title} RSS Feed", :href => "#{Blog.index}feed" }

= stylesheet_link_tag('darkblog')
= stylesheet_link_tag('panel')
= stylesheet_link_tag('jquery.lightbox')
= javascript_include_tag('http://ajax.googleapis.com/ajax/libs/jquery/1.3.2/jquery.min.js')
= javascript_include_tag('panel')
= javascript_include_tag('jquery.lightbox')
= javascript_include_tag('jquery.darkhax')
= javascript_include_tag('swfobject')
= javascript_include_tag('flowplayer')

- if env['REQUEST_PATH'] =~ %r{/(edit|posts)$}
  = stylesheet_link_tag('markitup/style')
  = stylesheet_link_tag('markitup/set')
  = javascript_include_tag('jquery.markitup')
  = javascript_include_tag('set')
  :javascript
    $(document).ready(function() {
      $('textarea').markItUp(mySettings);
    });

:javascript
  if (top.location != self.location) { top.location = self.location.href; }

- if development? || env['REQUEST_PATH'] =~ %r{/preview$}
  :javascript
    var disqus_developer = 1;

- unless env['USER_AGENT'].match('iPhone')
  :sass
    #footer
      position: fixed
      bottom: 0
      left: 0
      width: 100%
      height: 35px
      clear: both
      margin:
        top: -35px
      background: #252625
    #main-content
      padding:
        bottom: 35px
      height: auto
      min:
        height: 100%
